  -->

  <default_xs>70c</default_xs>

  <!-- Fuel composed of 30 a/o U-238 and 70 a/o U-235 -->
  <material id="1">
    <density value="18.8" units="g/cc" />
    <nuclide name="U-238" ao="30.0" />
    <nuclide name="U-235" ao="70.0" />
  </material>

  <!-- Water at 1 g/cc -->
  <material id="2">
    <density value="1.0" units="g/cc" />
    <nuclide name="H-1"  ao="2.0" />
    <nuclide name="O-16" ao="1.0" />
    <sab name="lwtr" xs="10t" />
  </material>

</materials>