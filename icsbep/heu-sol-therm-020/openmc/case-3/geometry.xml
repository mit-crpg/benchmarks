  <cell id="7"  material="2" region="2 -5  6  -7   " /> <!-- glory tube -->
  <cell id="8"  material="1" region="2 -3    -10   " /> <!-- solution in level tube -->
  <cell id="9"  material="3" region="3 -5    -10   " /> <!-- air in level tube -->
